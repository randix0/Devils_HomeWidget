<?xml version="1.0"?>
<layout>
    <adminhtml_homewidget_index>
        <reference name="content">
            <block type="devils_homewidget/adminhtml_homewidget" name="devils_homewidget" />
        </reference>
    </adminhtml_homewidget_index>

    <adminhtml_homewidget_grid>
        <block type="devils_homewidget/adminhtml_homewidget_grid" name="homewidget-ajax" output="toHtml"/>
    </adminhtml_homewidget_grid>

    <adminhtml_homewidget_edit>
        <reference name="left">
            <block type="devils_homewidget/adminhtml_homewidget_edit_tabs" name="homewidget-edit.tabs"/>
        </reference>
        <reference name="content">
            <block type="devils_homewidget/adminhtml_homewidget_edit" name="homewidget-edit"/>
        </reference>
        <reference name="js">
            <block type="adminhtml/template" name="homewidget-edit.js" template="devils/homewidget/form/js.phtml"/>
        </reference>
    </adminhtml_homewidget_edit>
</layout>
